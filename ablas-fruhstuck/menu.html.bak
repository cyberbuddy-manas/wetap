      cards.innerHTML = "";

      const items = MENU.filter(item=>{
        const catOk = (state.category==="all" || item.category===state.category);
        return catOk && matchesFilters(item) && matchesQuery(item);
      });

      items.forEach(item=>{
        const txt = itemText(item);
        const qty = state.cart[item.id] || 0;

        const div = document.createElement("div");
        div.className = "item";

        const thumb = document.createElement("div");
        thumb.className = "thumb";
        if (item.image){
          const img = document.createElement("img");
          img.src = item.image;
          img.alt = txt.name;
          thumb.appendChild(img);
        } else {
          thumb.textContent = item.emoji || "üçΩÔ∏è";
        }

        const veganTag = item.tags.includes("vegan") ? `<span class="tag">üåø ${t().vegan}</span>` : "";
        const vegTag   = (!item.tags.includes("vegan") && item.tags.includes("vegetarian")) ? `<span class="tag">ü•ó ${t().veg}</span>` : "";
        const spicyTag = item.tags.includes("spicy") ? `<span class="tag">üå∂Ô∏è ${t().spicy}</span>` : "";
        const halalTag = item.tags.includes("halal") ? `<span class="tag">‚úÖ Halal</span>` : "";

        div.innerHTML = `
          <div class="thumb">${thumb.innerHTML || ""}</div>
          <div class="meta">
            <div class="name-row">
              <h4 title="${txt.name}">${txt.name}</h4>
              <div class="price">${eur(item.price)}</div>
            </div>
            <p class="desc">${txt.desc}</p>
            <div class="tags">${veganTag}${vegTag}${spicyTag}${halalTag}</div>
            <div class="actions">
              <div class="qty">${qty>0 ? `In cart: <b>${qty}</b>` : ""}</div>
              <div style="display:flex; gap:8px">
                <button class="btn secondary" data-minus="${item.id}">‚àí</button>
                <button class="btn" data-plus="${item.id}">+</button>
              </div>
            </div>
          </div>
        `;

        // fix thumb injection (since we created thumb separately)
        div.querySelector(".thumb").replaceWith(thumb);

        div.querySelector("[data-plus]").onclick = () => add(item.id, 1);
        div.querySelector("[data-minus]").onclick = () => add(item.id, -1);

        cards.appendChild(div);
      });

      if (items.length === 0){
        const empty = document.createElement("div");
        empty.className = "muted";
        empty.style.padding = "12px";
        empty.textContent = "No results.";
        cards.appendChild(empty);
      }
    }

    function renderCart(){
      applyDiscount();
      const list = document.getElementById("cartlist");
      list.innerHTML = "";

      const entries = Object.entries(state.cart).filter(([_,qty])=>qty>0);

      if (!entries.length){
        const p = document.createElement("p");
        p.className = "muted";
        p.textContent = t().emptyCart;
        list.appendChild(p);
      } else {
        entries.forEach(([id,qty])=>{
          const item = MENU.find(x=>x.id===id);
          if (!item) return;
          const txt = itemText(item);

          const line = document.createElement("div");
          line.className = "line";
          line.innerHTML = `
            <div class="t">
              <b>${txt.name}</b>
              <small>${eur(item.price)} √ó ${qty}</small>
            </div>
            <div class="c">
              <div><b>${eur(item.price*qty)}</b></div>
              <div class="stepper">
                <button data-d="${id}">‚àí</button>
                <span>${qty}</span>
                <button data-i="${id}">+</button>
              </div>
            </div>
          `;
          line.querySelector("[data-i]").onclick = ()=> add(id, 1);
          line.querySelector("[data-d]").onclick = ()=> add(id, -1);
          list.appendChild(line);
        });
      }

      const sub = cartSubtotal();
      const disc = Math.min(state.discount, sub);
      const total = Math.max(0, sub - disc);

      document.getElementById("subVal").textContent = eur(sub);
      document.getElementById("discVal").textContent = eur(disc);
      document.getElementById("totVal").textContent = eur(total);

      const n = cartCount();
      document.getElementById("cartLine").textContent = t().cartLine(n);
      document.getElementById("cartTotal").textContent = t().total(eur(total));

      document.getElementById("coupon").value = state.coupon || "";
    }

    function renderTexts(){
      const L = t();

      document.getElementById("subtitle").textContent = L.subtitle;
      document.getElementById("catTitle").textContent = L.catTitle;
      document.getElementById("filterTitle").textContent = L.filterTitle;
      document.getElementById("infoTitle").textContent = L.infoTitle;
      document.getElementById("menuTitle").textContent = L.menuTitle;
      document.getElementById("menuHint").innerHTML = L.menuHint.replace("+","<b>+</b>");
      document.getElementById("resetBtn").textContent = L.reset;
      document.getElementById("q").placeholder = L.searchPH;

      document.getElementById("routeLbl").textContent = L.route;
      document.getElementById("callLbl").textContent = L.call;
      document.getElementById("mailLbl").textContent = L.mail;
      document.getElementById("disclaimer").textContent = L.disclaimer;

      document.getElementById("cartTitle").textContent = L.cart;
      document.getElementById("closeCartBtn").textContent = L.close;
      document.getElementById("checkoutBtn").textContent = L.checkout;
      document.getElementById("openCartBtn").textContent = L.cart;

      document.getElementById("subLbl").textContent = L.sub;
      document.getElementById("discLbl").textContent = L.disc;
      document.getElementById("totLbl").textContent = L.tot;
      document.getElementById("copyOrderBtn").textContent = L.copy;
      document.getElementById("clearBtn").textContent = L.clear;
      document.getElementById("cartNote").textContent = L.cartNote;
      document.getElementById("applyCoupon").textContent = L.apply;

      document.getElementById("tVegan").textContent = L.vegan;
      document.getElementById("tVeg").textContent = L.veg;
      document.getElementById("tSpicy").textContent = L.spicy;

      document.getElementById("langLabel").textContent = state.lang.toUpperCase();
    }

    function renderAll(){
      renderTexts();
      renderCats();
      renderCards();
      renderCart();
      persist();
    }

    /***********************
     * 6) ACTIONS
     ***********************/
    function add(id, delta){
      const cur = state.cart[id] || 0;
      const next = Math.max(0, cur + delta);
      if (next === 0) delete state.cart[id];
      else state.cart[id] = next;
      renderAll();
    }

    function setLang(next){
      state.lang = next;
      renderAll();
    }

    /***********************
     * 7) EVENTS
     ***********************/
    document.getElementById("q").addEventListener("input", (e)=>{
      state.q = e.target.value || "";
      renderCards();
    });

    // Toggle filters
    document.querySelectorAll(".toggle").forEach(el=>{
      el.addEventListener("click", ()=>{
        const key = el.getAttribute("data-filter");
        state.filters[key] = !state.filters[key];
        el.classList.toggle("active", state.filters[key]);
        renderCards();
      });
    });

    // Language cycle: DE ‚Üí EN ‚Üí TR ‚Üí RU ‚Üí DE
    document.getElementById("langBtn").addEventListener("click", ()=>{
      const order = ["de","en","tr","ru"];
      const i = order.indexOf(state.lang);
      setLang(order[(i+1) % order.length]);
    });

    // Reset
    document.getElementById("resetBtn").addEventListener("click", ()=>{
      state.category = "all";
      state.q = "";
      document.getElementById("q").value = "";
      state.filters = { vegan:false, vegetarian:false, spicy:false, halal:false };
      document.querySelectorAll(".toggle").forEach(x=>x.classList.remove("active"));
      renderAll();
    });

    // Cart drawer open/close
    const drawer = document.getElementById("drawer");
    const openCart = () => { drawer.classList.add("open"); renderCart(); };
    const closeCart = () => drawer.classList.remove("open");

    document.getElementById("openCartBtn").addEventListener("click", openCart);
    document.getElementById("checkoutBtn").addEventListener("click", openCart);
    document.getElementById("closeCartBtn").addEventListener("click", closeCart);
    document.getElementById("overlay").addEventListener("click", closeCart);

    // Coupon
    document.getElementById("applyCoupon").addEventListener("click", ()=>{
      state.coupon = document.getElementById("coupon").value || "";
      applyDiscount();
      persist();
      renderCart();
      alert((COUPONS[(state.coupon||"").trim().toUpperCase()] ? t().discountOk : t().discountBad));
    });

    // Clear cart
    document.getElementById("clearBtn").addEventListener("click", ()=>{
      state.cart = {};
      renderAll();
    });

    // Copy order text
    document.getElementById("copyOrderBtn").addEventListener("click", async ()=>{
      const lines = [];
      for (const [id,qty] of Object.entries(state.cart)){
        const item = MENU.find(x=>x.id===id);
        if (!item) continue;
        const txt = itemText(item);
        lines.push(`${qty}√ó ${txt.name} (${eur(item.price)})`);
      }
      const sub = cartSubtotal();
      applyDiscount();
      const disc = Math.min(state.discount, sub);
      const total = Math.max(0, sub - disc);
      lines.push(`---`);
      lines.push(`${t().sub}: ${eur(sub)}`);
      lines.push(`${t().disc}: ${eur(disc)}`);
      lines.push(`${t().tot}: ${eur(total)}`);

      const text = lines.join("\n");
      try{
        await navigator.clipboard.writeText(text);
        alert("Copied ‚úÖ");
      }catch{
        prompt("Copy this:", text);
      }
    });

    // Init
    (function init(){
      // Restore coupon
      state.coupon = state.coupon || "";
      // Set filter UI based on state
      document.getElementById("fVegan").classList.toggle("active", state.filters.vegan);
      document.getElementById("fVeg").classList.toggle("active", state.filters.vegetarian);
      document.getElementById("fSpicy").classList.toggle("active", state.filters.spicy);
      document.getElementById("fHalal").classList.toggle("active", state.filters.halal);
      renderAll();
    })();
  </script>
</body>
</html>
