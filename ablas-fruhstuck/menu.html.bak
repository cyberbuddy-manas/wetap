    function renderCats(){
      const el = document.getElementById("cats");
      el.innerHTML = "";

      const counts = {};
      for (const c of CATEGORIES) counts[c.key] = 0;
      MENU.forEach(it => {
        counts[it.category] = (counts[it.category]||0) + 1;
        counts["all"] = (counts["all"]||0) + 1;
      });

      CATEGORIES.forEach(cat=>{
        const div = document.createElement("div");
        div.className = "cat" + (state.category===cat.key ? " active" : "");
        div.onclick = () => { state.category = cat.key; renderAll(); };
        div.innerHTML = `
          <span>${cat.icon} ${cat.t[state.lang] || cat.t.de}</span>
          <span class="count">${counts[cat.key] || 0}</span>
        `;
        el.appendChild(div);
      });
    }

    function matchesFilters(item){
      const f = state.filters;
      if (f.vegan && !item.tags.includes("vegan")) return false;
      if (f.vegetarian && !item.tags.includes("vegetarian")) return false;
      if (f.spicy && !item.tags.includes("spicy")) return false;
      if (f.halal && !item.tags.includes("halal")) return false;
      return true;
    }

    function matchesQuery(item){
      const q = state.q.trim().toLowerCase();
      if (!q) return true;
      const txt = itemText(item);
      return (txt.name + " " + txt.desc).toLowerCase().includes(q);
    }

