    const cartSubtotal = () => {
      let sum = 0;
      for (const [id,qty] of Object.entries(state.cart)){
        const item = MENU.find(x=>x.id===id);
        if (item) sum += item.price * qty;
      }
      return sum;
    };

    const applyDiscount = () => {
      const code = (state.coupon || "").trim().toUpperCase();
      const rate = COUPONS[code] || 0;
      state.discount = rate * cartSubtotal();
    };

    const persist = () => {
      localStorage.setItem("abla_lang", state.lang);
      localStorage.setItem("abla_cart", JSON.stringify(state.cart));
      localStorage.setItem("abla_coupon", state.coupon || "");
